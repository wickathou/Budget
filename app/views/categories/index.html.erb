<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
    <p>
      <%= link_to "Show all transactions", category_entries_path(category) %>
    </p>
  <% end %>
</div>

<%= link_to "Add new category", new_category_path, class:'btn btn-primary' %>
