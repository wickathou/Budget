<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Icon:</strong>
    <%= category.icon %>
  </p>
  
  <p>
    <strong>Entries:</strong>
    <%= category.entries.map(&:name).join(', ') %>
  </p>

  <p>
    <strong>Total spent</strong>
    <%= category.entries.sum(:amount) %>
  </p>

</div>
