<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style:"display: block"%>
    <%= form.number_field :amount, step: '0.01' %>

  <div>
    <%= form.label :category_ids, style: "display: block" %>
    <%= form.collection_check_boxes :category_ids, categories, :id, :name, prompt: "Select a category", class: "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
